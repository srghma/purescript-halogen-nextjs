#!/bin/sh -e

# We don't want postgraphile_watch in our schema dump, and `--exclude-schema`
# doesn't like event triggers, so drop it, do the dump, and restore it. Only
# run this on development!
echo -n "Dumping DB..."

echo "DROP SCHEMA postgraphile_watch CASCADE;" | psql --no-psqlrc "$DATABASE_URL" >/dev/null 2>&1

pg_dump --schema-only --no-owner --file=schemas/schema.sql "$DATABASE_URL"

if [ -f node_modules/postgraphile/node_modules/graphile-build-pg/res/watch-fixtures.sql ]; then
  cat node_modules/postgraphile/node_modules/graphile-build-pg/res/watch-fixtures.sql | psql --no-psqlrc "$DATABASE_URL" >/dev/null 2>&1
else
  cat node_modules/graphile-build-pg/res/watch-fixtures.sql | psql --no-psqlrc "$DATABASE_URL" >/dev/null 2>&1
fi;

echo " done"
